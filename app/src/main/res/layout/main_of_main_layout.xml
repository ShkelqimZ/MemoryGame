<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_of_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="16dp"
    android:gravity="center"
    tools:context="com.example.pc.memory_test.MainOfMain_Activity"
    android:background="@drawable/gameback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layLang">
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:background="@drawable/albaniaf"
            android:text="ToggleButton"
            android:textOff=""
            android:textOn=""
            android:layout_marginLeft="160dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/btnSingle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LUAJ VETEM"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LUAJ ME SHOKUN"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnComputer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="TI VS KOMPJUTERI"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>


    <Button
        android:id="@+id/btnScore"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Rezultatet"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>



    </LinearLayout>
</RelativeLayout>
