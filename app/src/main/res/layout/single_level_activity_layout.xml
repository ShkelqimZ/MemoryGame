<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_of_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="16dp"
    android:gravity="center"
    tools:context="com.example.pc.memory_test.Single_level_activity"
    android:background="@drawable/gameback">
    <Button
        android:id="@+id/btnBegginer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="FILLESTAR"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="MESATARE"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_below="@id/btnBegginer"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnHard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="VESHTIRE"
        android:background="@drawable/round_edges"
        android:textSize="25dp"
        android:layout_below="@id/btnMedium"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>
